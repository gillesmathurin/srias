<div class="span-16">
	<h1>Modifier le texte d'accueil</h1>

	<%= form_for(@texte_accueil) do |f| %>
	  <%= render :partial => 'shared/form_errors', :locals => {:object => @texte_accueil} %>

	  <p>
	  	<%= f.label :titre, "Titre" %> : <%= f.text_field :titre %>
	  </p>

	  <p>
	    <%= f.label :content, "Contenu" %><br />
	    <%= f.text_area :content, :class => "tinymce" %>
	    <%= tinymce :theme => "advanced", :language => "fr" %>
	  </p>
	  <p>
	    <%= f.submit 'Enregistrer' %>
	  </p>
	<% end %>

	<%= link_to 'Retour', root_path, :class => "button small" %>
</div>
<!-- Right Sidebar -->
<div class="span-4 last">
	<%= render :partial => "shared/right_col" %>
</div>