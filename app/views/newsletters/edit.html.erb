<h1>Editing newsletter</h1>

<% form_for(@newsletter) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titre %><br />
    <%= f.text_field :titre %>
  </p>
  <p>
    <%= f.label :sommaire %><br />
    <%= f.text_area :sommaire %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :preview %><br />
    <%= f.text_field :preview %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @newsletter %> |
<%= link_to 'Back', newsletters_path %>