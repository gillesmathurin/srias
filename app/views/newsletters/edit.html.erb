<% render :partial => "shared/tinymce_init" %>

<div class="span-16">
	<h1 class="section-title">Modification Newsletter</h1>

	<%= form_for(@newsletter, :html => {:multipart => true}) do |f| %>
	  	<%= render :partial => 'shared/form_errors', :locals => {:object => @newsletter} %>

		<%= render :partial => 'form', :locals => {:f => f} %>
	  <p>
	    <%= f.submit 'Modifier', class: 'btn' %>
	  </p>
	<% end %>

	<%= link_to 'Voir', @newsletter, :class => "btn btn-sm btn-success" %>
	<%= link_to 'Retour', newsletters_path, :class => "btn btn-sm" %>
</div>