<div class="span-16">
  <h1>Liste des Categories</h1>

  <table>
    <tr>
      <th>Nom</th>
    </tr>

  <% @categories.each do |category| %>
    <tr>
      <td><%=h category.nom %></td>
      <td><%= link_to 'Modifier', edit_category_path(category) %></td>
      <td><%= link_to 'Supprimer', category, :confirm => 'Sur de votre decision ?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'Ajouter une Categorie', new_category_path %>
</div>

<div class="span-4 last">
	<%= render :partial => "shared/right_col" %>    
</div>