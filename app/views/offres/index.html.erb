<h1>Listing offres</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Partenaire</th>
    <th>Date debut</th>
    <th>Date fin</th>
    <th>Description</th>
    <th>Document file name</th>
    <th>Document content type</th>
    <th>Document file size</th>
    <th>Document updated at</th>
  </tr>

<% @offres.each do |offre| %>
  <tr>
    <td><%=h offre.nom %></td>
    <td><%=h offre.partenaire_id %></td>
    <td><%=h offre.date_debut %></td>
    <td><%=h offre.date_fin %></td>
    <td><%=h offre.description %></td>
    <td><%=h offre.document_file_name %></td>
    <td><%=h offre.document_content_type %></td>
    <td><%=h offre.document_file_size %></td>
    <td><%=h offre.document_updated_at %></td>
    <td><%= link_to 'Show', offre %></td>
    <td><%= link_to 'Edit', edit_offre_path(offre) %></td>
    <td><%= link_to 'Destroy', offre, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New offre', new_offre_path %>