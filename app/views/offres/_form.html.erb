<% render :partial => "shared/tinymce_init" %>
  <%= form_for([@partenaire, @offre], :html => {:multipart => true}) do |f| %>
    <%= render :partial => 'shared/form_errors', :locals => {:object => @offre} %>

    <p>
      <%= f.label :nom %><br />
      <%= f.text_field :nom %>
    </p>
    <p>
      <%= f.label :partenaire_id %><br />
      <%= @partenaire.nom %>
    </p>
    <p>
      <%= f.label :date_debut %><br />
      <%= f.date_select :date_debut %>
    </p>
    <p>
      <%= f.label :date_fin %><br />
      <%= f.date_select :date_fin %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description, :class => "tinymce" %>
    </p>
    <% f.fields_for :fichiers do |fichier_form| %>
  		<p><%= fichier_form.label "Fichier joint" %> : <%= fichier_form.file_field :fichier %></p>
  		<% unless fichier_form.object.new_record? %>
  		  <%= link_to(fichier_form.object.fichier.url) %>
  			<%= fichier_form.check_box '_destroy' %>
  			<%= fichier_form.label '_destroy', 'Supprimer' %>
  		<% end %>
  	<% end %>
    <p>
      <%= f.submit 'Enregistrer', class: 'btn' %>
    </p>
  <% end %>