  <% form_for(@offre) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :nom %><br />
      <%= f.text_field :nom %>
    </p>
    <p>
      <%= f.label :partenaire_id %><br />
      <%= @partenaire.nom %>
    </p>
    <p>
      <%= f.label :date_debut %><br />
      <%= f.date_select :date_debut %>
    </p>
    <p>
      <%= f.label :date_fin %><br />
      <%= f.date_select :date_fin %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :document, "Document téléchargeable" %><br/>
      <%= f.file_field :document %>
    </p>
    <p>
      <%= f.submit 'Enregistrer' %>
    </p>
  <% end %>