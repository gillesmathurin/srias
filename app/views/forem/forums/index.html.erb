<div id='forums_container'>
  <h1 id='forums_title'><%= t('.title') %></h1>

  <header>
	<nav>		
	  <% unless current_user %>
	  <b>Pour participer au forum vous devez soit :</b><br/>
	    <%= link_to "Enregistrer-vous", main_app.new_user_path(), :class => "button small midmedium" %> ou 
	    <%= link_to "Connectez-vous", main_app.new_user_session_path(), :class => "button small midmedium" %>
	  <% end %>
	</nav>
</header>

  <%= render @categories %>
</div>

<br>
<footer id='admin_link'>
  <% if forem_admin? %>
    <%= link_to t("area", :scope => "forem.admin"), forem.admin_root_path %>
  <% end %>
</footer>
