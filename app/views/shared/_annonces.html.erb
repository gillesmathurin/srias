<% content_for :head do %>
  <script type="text/javascript" src="javascripts/jquery.easing.1.3.js"></script>
	<script type="text/javascript" src="javascripts/jquery.coda-slider-2.0.js"></script>
	 <script type="text/javascript">
		$().ready(function() {
			$('#coda-slider-1').codaSlider({
			  autoSlide: true,
			  autoSlideInterval: 5000,
			  autoSlideStopWhenClicked: true,
			  dynamicArrows:false
			});
		});
	 </script>
<% end %>

<div class="coda-slider-wrapper">
  <div class="coda-slider preload" id="coda-slider-1">
    <!-- Actions as annonce -->
    <%- unless @action_as_annonces.empty? -%>
      <% for action in @action_as_annonces %>
        <div class="panel">
          <div class="panel-wrapper">
            <% unless action.illustration.nil? %>
              <p class="annonce-image">
                <%= image_tag action.illustration.url(:thumb) %>
              </p>
            <% end %>
            <p class="annonce-texte">
              <span class="nom"><%= link_to(raw(action.nom), uneaction_path(action.id)) %></span><br/> <%= action.lieu %> du <%=h format_datetime(action.date_debut) %> au <%=h format_datetime(action.date_fin) %>
            </p>
          </div>
        </div>
      <% end %>
    <%- end -%>
    <!-- Annonces -->
    <%- unless annonces_courantes.empty? -%>
      <% for annonce in annonces_courantes %>
        <div class="panel">
          <div class="panel-wrapper">
            <% unless annonce.image.nil? %>
              <p class="annonce-image">
                <%= image_tag annonce.image.url(:thumb) unless missing_annonce_image(annonce)  %>              
              </p>
            <% end %>
            <p class="annonce-texte">
              <span class="nom"><%= raw annonce.message %></span> <br/> <%= link_to "voir ...", annonce_path(annonce) %>
            </p>            
          </div>
        </div>
      <%- end -%>
    <%- end -%>
    
  </div>
</div>