<h1>Editing manifestation</h1>

<% form_for(@manifestation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </p>
  <p>
    <%= f.label :lieu %><br />
    <%= f.text_field :lieu %>
  </p>
  <p>
    <%= f.label :date_debut %><br />
    <%= f.datetime_select :date_debut %>
  </p>
  <p>
    <%= f.label :date_fin %><br />
    <%= f.datetime_select :date_fin %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @manifestation %> |
<%= link_to 'Back', manifestations_path %>