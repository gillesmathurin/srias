<h1>Listing manifestations</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Lieu</th>
    <th>Date debut</th>
    <th>Date fin</th>
    <th>Description</th>
  </tr>

<% @manifestations.each do |manifestation| %>
  <tr>
    <td><%=h manifestation.nom %></td>
    <td><%=h manifestation.lieu %></td>
    <td><%=h manifestation.date_debut %></td>
    <td><%=h manifestation.date_fin %></td>
    <td><%=h manifestation.description %></td>
    <td><%= link_to 'Show', manifestation %></td>
    <td><%= link_to 'Edit', edit_manifestation_path(manifestation) %></td>
    <td><%= link_to 'Destroy', manifestation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New manifestation', new_manifestation_path %>