<div class="span-16">
	<%= render :partial => "shared/flash_messages" %>
	<h1>Manifestations</h1>

	<% @manifestations.each do |manifestation| %>
		<p>
			<span class="nom-manif"><%=h manifestation.nom %></span> à <%=h manifestation.lieu %> du <%=h format_datetime(manifestation.date_debut) %> au <%=h format_datetime(manifestation.date_fin) %><br/> <%=h manifestation.description %> | <%= link_to "Voir", manifestation_path(manifestation) %><br/>
		<% if current_user %>	
			<%= link_to 'Modifier', edit_manifestation_path(manifestation) %> |
			<%= link_to 'Supprimer', manifestation, :confirm => 'En êtes vous sur ?', :method => :delete %>
		<% end %>
		</p>
	<% end %>

	<br />
<% if current_user %>
	<%= link_to 'Ajouter manifestation', new_manifestation_path %>
<% end %>
</div>
<!-- Right Sidebar -->
<div class="span-4 last">
	<%= render :partial => "shared/right_col" %>
</div>
