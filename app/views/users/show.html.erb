<div class="span-16">
	<%= render :partial => "shared/flash_messages" %>	
	
	<p>
	  <b>Login:</b>
	  <%= @user.login %>
	</p>

	<p>
	  <b>Nombre de connexion:</b>
	  <%= @user.login_count %>
	</p>

	<p>
	  <b>Dernière connexion:</b>
	  <%= @user.last_login_at %>
	</p>

	<p>
	  <b>Connecté le:</b>
	  <%= @user.current_login_at %>
	</p>

	<p>
	  <b>Dernière IP de connexion:</b>
	  <%= @user.last_login_ip %>
	</p>

	<p>
	  <b>IP actuel:</b>
	  <%= @user.current_login_ip %>
	</p>


	<%= link_to 'Modifier', edit_account_path, :class => "btn btn-sm btn-warning" %>
	<% if can? :manage, @user %>
	 <%= link_to "Créer nouveau compte", new_user_path(), :class => "btn btn-sm btn-success" %>
	<% end %>
</div>