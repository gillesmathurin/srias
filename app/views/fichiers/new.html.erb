<div class="span-16">
	<h1>Enregistrez un fichier</h1>
<% if @manifestation %>
	<% form_for([@manifestation,@fichier], :html => {:multipart => true}) do |f| -%>
	  	<%= f.error_messages %>
	
		<p><%= f.label :fichier, "Choisissez le fichier" %> : <%= f.file_field :fichier %></p>
		
		<p>
	    	<%= f.submit 'Enregistrer' %>
	  	</p>
	<% end -%>
<% end %>

<% if @offre %>
  <% form_for([@offre,@fichier], :html => {:multipart => true}) do |f| -%>
    	<%= f.error_messages %>
	
		<p><%= f.label :fichier, "Choisissez le fichier" %> : <%= f.file_field :fichier %></p>
		
		<p>
	    	<%= f.submit 'Enregistrer' %>
	  	</p>
	<% end -%>
<% end %>

</div>
<!-- Right Sidebar -->
<div class="span-4 last">
	<%= render :partial => "shared/right_col" %>
</div>