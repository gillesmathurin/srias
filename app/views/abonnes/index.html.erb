<div class="span-16">
	<h1>Listing des abonnés à la newsletter</h1>

	<table>
	  <tr>
	    <th>Email</th>
	  </tr>

	<% @abonnes.each do |abonne| %>
	  <tr>
	    <td><%= abonne.email %></td>
	    <td><%= link_to 'Modifier', edit_abonne_path(abonne), :class => "button small" %></td>
	    <td><%= link_to 'Supprimer', abonne, :confirm => 'En êtes vous sur?', :method => :delete, :class => "button small" %></td>
	  </tr>
	<% end %>
	</table>
	<p>
		<%= will_paginate @abonnes, :previous_label => "Précedent", :next_label => "Suivant" %>
	</p>

	<br />

	<%= link_to 'Ajouter un abonné', new_abonne_path, :class => "button small midmedium" %> <%= link_to "Tout supprimer", delete_all_abonnes_path(), :class => "button small midmedium" %>
</div>
<!-- Right Sidebar -->
<div class="span-4 last">
	<%= render :partial => "shared/right_col" %>
</div>