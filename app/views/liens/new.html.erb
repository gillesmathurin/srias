<div class="span-16">
	<h1>Nouveau Lien</h1>

	<%= form_for(@lien) do |f| %>
		<% if @lien.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@lien.errors.count, "erreur") %> empêchèrent ce formulaire d'être enregistré :</h2>
				<ul>
					<% @lien.errors.full_messages.each do |msg| %>
						<li> <%= msg %> </li>
					<% end %>
				</ul>
			</div>
		<% end %>	  

		<%= render :partial => 'form', :locals => {:f => f} %>

	  <p>
	    <%= f.submit 'Enregistrer' %>
	  </p>
	<% end %>

	<%= link_to 'Retour', liens_path %>
</div>
<!-- Right Sidebar -->
<div class="span-4 last">
	<%= render :partial => "shared/right_col" %>
</div>