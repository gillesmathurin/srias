<div class="span-16">
	<h1>Modifier Info Partenaire</h1>

	<%= form_for(@partenaire, :html => {:multipart => true}) do |f| %>
	  	<%= render :partial => 'shared/form_errors', :locals => {:object => @partenaire} %>

		<%= render :partial => 'form', :locals => {:f => f} %>
	  	
	  	<p><%= f.submit 'Modifier' %></p>
	<% end %>

	<%= link_to 'Voir', @partenaire, :class => "button small" %>
	<%= link_to 'Retour', partenaires_path, :class => "button small" %>
</div>

<!-- Right Sidebar -->
<div class="span-4 last">
	<%= render :partial => "shared/right_col" %>
</div>
