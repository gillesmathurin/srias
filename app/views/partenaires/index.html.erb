<div class="span-16">
	<%= render :partial => "shared/flash_messages" %>	
	
	<h1 class="section-title">Nos partenaires</h1>

  <% @partenaires.each do |group_by_category| %>
    
    <p class="nom-mission">Partenaire <%= Category.find(group_by_category[0]).nom %></p>
    
    <% group_by_category[1].each do |partenaire| %>
      <div class="partenaire">
        <p class="partenaire_logo">
          <% if image_present?(partenaire) %>
            <%= link_to(image_tag(partenaire.logo.url(:thumb)), partenaire.logo_link) %>
          <% else %>
            <%= link_to(partenaire.link, partenaire.logo_link) unless partenaire.logo_link.blank? %>
          <% end %>
        </p>
        <p class="partenaire_description">
          <span class="partenaire_nom"><%= partenaire.nom %></span><br/>
          <%= partenaire.description %>
        </p>
        <p class="partenaire_link">
          <%= link_to(partenaire.link, partenaire.link) unless partenaire.link.blank? %>
        </p>
        <% if current_user %>
          <p>
            <%= link_to 'Modifier', edit_partenaire_path(partenaire), :class => "btn btn-sm btn-warning" %>
            <%= link_to 'Supprimer', partenaire, :confirm => 'En êtes vous sur?', :method => :delete, :class => "btn btn-sm btn-danger" %> <%= link_to "Enregistrer une offre", new_partenaire_offre_path(partenaire), :class => "btn btn-sm btn-primary" %>
          </p>
        <% end %>
      
        <div class="part_offres">
          <p class="accroche">Bénéficiez des offres privilégiées de ce partenaire !</p>
        
          <% partenaire.offres.each do |offre| %>
            <div class="offre">
              <p>
                <%= link_to offre.nom, partenaire_offre_path(partenaire.id, offre), :class => "offre_link" %> - Du <%= l offre.date_debut,:format => :default  %> Au <%= l offre.date_fin, :format => :default %><br/>
                <%= offre.description %>
                <% if current_user %>
                  <br/><%= link_to "Supprimer cette offre", offre_path(offre), :method => :delete, :data => {:confirm => "En êtes vous sur ?" }, :class => "btn btn-sm btn-danger" %>
                <% end %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <hr/>
    
  <% end %>

	<br />
<% if current_user %>
	<%= link_to 'Ajouter partenaire', new_partenaire_path, :class => "btn btn-sm btn-success" %>
<% end %>
</div>

