<div class="span-16">
	<h1 class="section-title">Nouveau partenaire</h1>

	<%= form_for(@partenaire, :html => {:multipart => true}) do |f| %>
	  <% if @partenaire.errors.any? %>
	  	<div id="error_explanation">
	  		<h2><%= pluralize(@partenaire.errors.count, "erreur") %> empêchèrent ce formulaire d'être enregistré</h2>
	  		<ul>
	  			<% @partenaire.errors.full_message.each do |msg| %>
	  				<li><%= msg %></li>
	  			<% end %>
	  		</ul>
	  	</div>
	  <% end %>

		<%= render :partial => 'form', :locals => {:f => f} %>

	  <p>
	    <%= f.submit 'Enregistrer' %>
	  </p>
	<% end %>

	<%= link_to 'Retour', partenaires_path, :class => "button small" %>
</div>
